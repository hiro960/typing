      {
        "condition": "ㅎパッチム + 母音",
        "form": "ㅎが脱落",
        "example": "좋아요 [조아요], 놓아요 [노아요]"
      },
      {
        "condition": "ㄶ(ㄴㅎ)パッチム + 母音",
        "form": "ㅎが脱落し、ㄴが連音化",
        "example": "많아요 [마나요], 싫어요 [시러요]"
      },
      {
        "condition": "ㅀ(ㄹㅎ)パッチム + 母音",
        "form": "ㅎが脱落し、ㄹが連音化",
        "example": "잃어요 [이러요], 뚫어요 [뚜러요]"
      }
    ],
    "usageCases": [
