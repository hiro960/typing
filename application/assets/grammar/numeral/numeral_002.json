      {
        "condition": "11〜19",
        "form": "열 + 하나/둘/셋/넷...",
        "example": "열둘 (12)"
      },
      {
        "condition": "十の位の語形",
        "form": "스물(20), 서른(30), 마흔(40), 쉰(50), 예순(60), 일흔(70), 여든(80), 아흔(90)",
        "example": "서른다섯 (35)"
      },
      {
        "condition": "組み合わせ",
        "form": "十の位 + 一の位（続けて書く）",
        "example": "스물여덟 (28)"
